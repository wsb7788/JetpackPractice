<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <FrameLayout
            android:id="@+id/loader_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone">


        </FrameLayout>


        

        <LinearLayout

            android:id="@+id/heading"
            android:gravity="center"
            android:paddingStart="75dp"
            android:paddingEnd="75dp"
            android:background="@color/heading_color"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_ticket_ticket_id_label"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ID"
                    android:textColor="@color/table_text_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- <LinearLayout
                 android:layout_width="2dp"
                 android:layout_height="match_parent"
                 android:background="#f0f0f0"/>
    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_ticket_date_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/table_text_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#f0f0f0"/>
    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_ticket_subject_ticket_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Customer Name"
                    android:textColor="@color/table_text_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#f0f0f0"/>
    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_ticket_status_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Customer Mobile"
                    android:textColor="@color/table_text_color"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/heading"
            android:id="@+id/listViewSavedFeedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:scrollbars="none"
            android:background="@null"
            android:divider="@null" />

    </RelativeLayout>


</layout>