<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chat_member_auth_count"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_chat_member_auth_text"
        android:textSize="14sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/notosanskr_bold"/>

    <TextView
        android:id="@+id/chat_member_nickname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat_member_auth_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskr_regular"/>

    <TextView
        android:id="@+id/chat_member_today_auth_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat_member_nickname"
        android:layout_marginStart="3dp"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/notosanskr_regular"/>

    <ImageView
        android:id="@+id/chat_member_host_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/chat_member_today_auth_count"
        android:layout_marginStart="7dp"
        android:src="@drawable/icon_crown"
        android:contentDescription="@string/chat_member_host_img"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>