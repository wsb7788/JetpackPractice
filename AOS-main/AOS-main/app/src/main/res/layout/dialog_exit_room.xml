<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_chat_dialog">

    <TextView
        android:id="@+id/chat_dialog_exit_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/chat_dialog_exit_title"
        android:textSize="20sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/notosanskr_regular" />

    <TextView
        android:id="@+id/chat_dialog_exit_complete_btn"
        android:layout_width="150dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/chat_dialog_exit_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="@string/chat_dialog_exit_complete"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskr_medium"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/chat_dialog_exit_cancel_btn"
        android:layout_width="150dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_dialog_exit_text"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="@string/chat_dialog_exit_cancel"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskr_medium"
        android:clickable="true"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_dialog_exit_text"
        android:background="@color/light_gray"/>

    <View
        android:layout_width="1dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_dialog_exit_text"
        app:layout_constraintStart_toStartOf="@id/chat_dialog_exit_complete_btn"
        app:layout_constraintEnd_toEndOf="@+id/chat_dialog_exit_cancel_btn"
        android:background="@color/light_gray"/>


</androidx.constraintlayout.widget.ConstraintLayout>