<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="280dp"
            android:layout_height="170dp"
            android:background="@drawable/bg_dialog_wekit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/dialog_wekit_v1_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_medium"
                    android:textSize="16sp"
                    android:textColor="@color/dialog_wekit_title"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/dialog_wekit_v1_check_tv"
                    tools:text="WEKIT에 대한 업데이트가 필요합니다."/>

                <TextView
                    android:id="@+id/dialog_wekit_v1_check_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="@string/dialog_wekit_check"
                    android:textColor="@color/dialog_wekit_button_text"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_dialog_wekit_v1_btn_border"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>